
<h1>All Plots:</h1>



<% @plots.each do |plot| %>
<ul>
  <section id ="plots-<%=plot.id%>"> <li> Plot: <%= plot.number %> </li>

      <%plot.plants.each do |plant|%>
        <ul>
        <section id="plant-<%= plant.id %>">
          <li> <%= plant.name %> <%= link_to "Remove Plant", "/plots/#{plot.id}/#{plant.id}", method: :delete%> </li>
        </section>
        </ul>

      <% end %>
      </ul>
  </section>
  <% end %>
